<record id="loanout" is-extension="true">
    <services-record-path id="omca">loansout_omca:http://collectionspace.org/services/loanout/local/omca,loansout_omca</services-record-path>
    <section id="loanoutInformation">
         <field id="loanOutNumber" sortKey="sortableLoanOutNumber">
            <!-- adding sortKey attribute -->
            <options>
                <option id="omca_loanout" sample="LO2015.1">Loan Out</option>
            </options>
        </field>
        <field id="loanPurpose" ui-search="repeatable" autocomplete="vocab-loanpurpose" ui-type="enum" seperate_ui_container="true">
            <!-- removing options block; adding vocab-loanpurpose vocab -->
            <options action='delete'/>
        </field>
        <repeat id="loanStatusGroupList/loanStatusGroup">
            <field id="loanStatus" ui-search="repeatable" autocomplete="vocab-omcaloanoutstatus" ui-type="enum">
                <!-- changing vocab to vocab-omcaloanoutstatus -->
            </field>
        </repeat>
        <field id="sortableLoanOutNumber" section="omca" mini="list" ui-type="computed" ui-args="loanOutNumber" ui-func="cspace.util.computeSortableObjectNumber" ui-readonly="true">
            <!-- adding computed sortable ID number -->
        </field>
    </section>
</record>