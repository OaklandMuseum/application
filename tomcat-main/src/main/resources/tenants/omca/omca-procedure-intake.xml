<record id="intake" is-extension="true">
    <services-record-path id="omca">intakes_omca:http://collectionspace.org/services/intake/local/omca,intakes_omca</services-record-path>
    <section id="objectEntryInformation">
        <field id="entryReason" ui-search="repeatable" autocomplete="vocab-entryReason" ui-type="enum" seperate_ui_container="true">
            <!-- removing options block; adding vocab-entryReason vocab -->
            <options action='delete'/>
        </field>
        <repeat id="entryMethods">
            <field id="entryMethod" ui-search="repeatable" autocomplete="vocab-omcaentrymethod" ui-type="enum">
                <!-- adding omcaentrymethod vocab -->
            </field>
        </repeat>
        <field id="sortableEntryNumber" section="omca"></field>
        <repeat id="depositorOMCAGroupList/depositorOMCAGroup" section="omca">
            <field id="depositorOMCA" ui-search="repeatable" autocomplete="person-person,organization-organization" section="omca"></field>
            <field id="depositorsRequirementsOMCA" section="omca"></field>
        </repeat>
    </section>
    <section id="objectCollectionInformation">
        <field id="fieldCollectionPlace" autocomplete="place-place">
            <!-- adding place authority -->
        </field>
    </section>
    <section id="valuationInformation">
        <field id="estimatedValue" ui-type="validated" datatype="float" section="omca"></field>
    </section>
</record>