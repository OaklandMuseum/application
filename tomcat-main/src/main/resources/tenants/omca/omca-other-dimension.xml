<record id="dimension">
    <section id="dimensionInformation">
        <repeat id="measuredPartGroupList/measuredPartGroup">
            <field id="measuredPart" autocomplete="vocab-measuredpart" ui-type="enum" seperate_ui_container="true">
                <!-- removing options block; adding vocab-measuredpart vocab -->
                <options action='delete'/>
            </field>
            <repeat id="dimensionSubGroupList/dimensionSubGroup">
                <field id="dimension" seperate_ui_container="true">
                    <!-- updating options block -->
                    <options>
                        <option id="">Please select a value</option>
                        <option id="area">area</option>
                        <option id="circumference">circumference</option>
                        <option id="count">count</option>
                        <option id="depth">depth</option>
                        <option id="diameter">diameter</option>
                        <option id="film-size">film size</option>
                        <option id="height">height</option>
                        <option id="length">length</option>
                        <option id="running-time">running time</option>
                        <option id="target">target</option>
                        <option id="volume">volume</option>
                        <option id="weight">weight</option>
                        <option id="width">width</option>
                    </options>
                </field>
                <field id="measurementUnit" seperate_ui_container="true">
                    <!-- updating options block -->
                    <options>
                        <option id="">Please select a value</option>
                        <option id="feet">feet</option>
                        <option id="inches">inches</option>
                        <option id="minutes">minutes</option>
                        <option id="ounces">ounces</option>
                        <option id="pixels-per-inch">pixels per inch</option>
                        <option id="pounds">pounds</option>
                        <option id="square-feet">square feet</option>
                        <option id="stories">stories</option>
                        <option id="troy-ounces">troy ounces</option>
                        <option id="yards">yards</option>
                    </options>
                </field>
                <field id="measurementMethod" autocomplete="vocab-measurementmethod" ui-type="enum">
                    <!-- removing options block; adding vocab-measurementmethod vocab -->
                    <options action='delete'/>
                </field>
            </repeat>
        </repeat>
    </section>
</record>