<record id="preferredCA" in-recordlist="no" separate-record="false">
    <section id="termInformation">
        <repeat id="conceptTermGroupList/conceptTermGroup">
            <field id="termType" autocomplete="vocab-termtype" ui-type="enum">
                <!-- adding termtype authority; deleting options list -->
                <options action="delete" />
            </field>
            <field id="termStatus" autocomplete="vocab-termstatus" ui-type="enum" ui-search="repeatable" seperate_ui_container="true" mini="search,list,relate">
                <!-- adding termstatus authority; setting default value; deleting options list -->
                <options action="delete" />
                <enum>
                    <default>urn:cspace:museumca.org:vocabularies:name(termstatus):item:name(provisional)'Provisional'</default>
                </enum>
            </field>
            <field id="historicalStatus" autocomplete="vocab-historicalstatus" ui-type="enum">
                <!-- adding historicalstatus authority; deleting options list -->
                <options action="delete" />
            </field>
        </repeat>
    </section>
</record>